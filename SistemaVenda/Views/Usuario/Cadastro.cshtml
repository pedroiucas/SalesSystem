@model Aplicacao.Models.UsuarioViewModel;

@{
    ViewData["Title"] = "Usuário";
}

<h2>Usuário</h2>
<hr />

<form asp-controller="Usuario" asp-action="Cadastro" method="post">
    <input type="hidden" asp-for="Codigo" value="@Model.Codigo" />
    <div class="form-group">
        <div class="col-4">
            <label>Nome</label>
            <input type="text" asp-for="Nome" value="@Model.Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

    </div>
    <div class="form-group">
        <div class="col-4">
            <label>Email</label>
            <input type="text" asp-for="Email" value="@Model.Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

    </div>
    <div class="form-group">
        <div class="col-4">
            <label>Senha</label>
            <input type="password" asp-for="Senha" value="@Model.Senha" class="form-control" />
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="col">
        <button type="submit" class="btn btn-success">Gravar</button>
    </div>
</form>