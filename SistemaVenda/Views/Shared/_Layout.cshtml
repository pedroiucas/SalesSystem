<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My Stock</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/css/Padrao/app.min.css" rel="stylesheet" type="text/css" />
</head>
<body>
    @*INICIO DO HEADER*@
    <div id="header" class="header navbar-default">
        <div class="navbar-header">
            <a href="@Url.Action("Index","Home")" class="navbar-brand">
                <span>
                    <img src="~/img/logo.png" class="responsive-img" style="max-height: 30px" />
                </span>
            </a>
        </div>

        <div class="navbar-nav navbar-right">
             <a href="~/Login/Index/0" style="color: var(--dark-blue);position: relative;right: 12px;" class="dropdown-item">
                 <div style="top:7px;position:relative">
                     Sair &nbsp;<i class="material-icons" style="font-size: 14px;position: absolute;top: 2px;">logout</i>
                 </div>
             </a>
        </div>
    </div>
    @*FIM DO HEADER*@

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js" type="text/javascript"></script>
    <script src="~/js/Padrao/app.min.js"></script>
    
    @{
        var mensagemErro = TempData["MensagemErro"];
        TempData["MensagemErro"] = null;

        var mensagemSucesso = TempData["MensagemSucesso"];
        TempData["MensagemSucesso"] = null;
    }

    @if (mensagemErro != null)
    {
        <div style="position: fixed;right: 0%;"  class="alert alert-danger alert-dismissible fade show" role="alert">
          @mensagemErro  
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <script>
            setTimeout(() => {
              $(".alert").css("display", "none");
            }, 4000);
        </script>
    }

    @if (mensagemSucesso != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert" style="position: fixed;right: 0%;" >
          @mensagemSucesso  
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <script>
            setTimeout(() => {
              $(".alert").css("display", "none");
            }, 4000);
        </script>
    }

    @*RENDERIZA O RESTANTE DO CORPO*@
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script>
        setTimeout(removePace, 2000);

        function removePace(){
            $(".pace-activity").css("display","none");
            $(".pace-progress").css("display","none");
        }
    </script>
</body>
</html>
